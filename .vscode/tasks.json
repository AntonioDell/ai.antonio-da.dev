{
  // See https://go.microsoft.com/fwlink/?LinkId=733558
  // for the documentation about the tasks.json format
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Nuxt App (dev)",
      "type": "shell",
      "command": "pnpm dev",
      "options": {
        "cwd": "${workspaceFolder}"
      }
    },
    {
      "label": "Prisma generate",
      "type": "shell",
      "command": "pnpm generate:prisma",
      "options": {
        "cwd": "${workspaceFolder}"
      }
    },
    {
      "label": "Migrate Prisma Schema",
      "type": "shell",
      "command": "pnpm migrate",
      "options": {
        "cwd": "${workspaceFolder}"
      }
    }
  ]
}
